# Database
DATABASE_URL=postgresql://evo_user:evo_password@localhost:5432/evo_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=evo-ai-reports
S3_REGION=us-east-1



# PRIMARY: Anthropic Claude 3.5 Sonnet (recommended for biological insights)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# FALLBACK 1: OpenAI GPT-4 Turbo (excellent reasoning, JSON mode)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_DEFAULT_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000
# FALLBACK 2: Google Gemini 1.5 Pro (long context, free tier available)
# Get your key at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here
# Data Sources (Optional - improves performance)
# Anthropic (optional)


# Ray
RAY_ADDRESS=ray://localhost:10001
RAY_NAMESPACE=evo_ai

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=evo-ai-backend
OTEL_SERVICE_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Application
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
